<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>human_resource</servlet-name>
        <servlet-class>com.epam.traffic.controllers.HRController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>human_resource</servlet-name>
        <url-pattern>/human_resource</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>trains</servlet-name>
        <servlet-class>com.epam.traffic.controllers.TrainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>trains</servlet-name>
        <url-pattern>/trains</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>stations</servlet-name>
        <servlet-class>com.epam.traffic.controllers.StationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>stations</servlet-name>
        <url-pattern>/stations</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>staff</servlet-name>
        <servlet-class>com.epam.traffic.controllers.StaffController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>staff</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>time_table</servlet-name>
        <servlet-class>com.epam.traffic.controllers.TimeTableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>time_table</servlet-name>
        <url-pattern>/time_table</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>authorization</servlet-name>
        <servlet-class>com.epam.traffic.controllers.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>search_employee</servlet-name>
        <servlet-class>com.epam.traffic.controllers.SearchEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search_employee</servlet-name>
        <url-pattern>/search_employee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>search_timetable</servlet-name>
        <servlet-class>com.epam.traffic.controllers.SearchTimeTableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search_timetable</servlet-name>
        <url-pattern>/search_timetable</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>search_trains</servlet-name>
        <servlet-class>com.epam.traffic.controllers.SearchTrainsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search_trains</servlet-name>
        <url-pattern>/search_trains</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>pageFilter</filter-name>
        <filter-class>com.epam.traffic.filters.PageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>pageFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
</web-app>